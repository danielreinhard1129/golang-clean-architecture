# APP
APP_PORT=8000

# JWT
JWT_SECRET=secret

# DATABASE
# ðŸ‘‰ When running locally (make watch / go run):
#    - POSTGRES_HOST=localhost
#    - POSTGRES_PORT=6543
# ðŸ‘‰ When running with Docker (make docker-up):
#    - POSTGRES_HOST=db   (because the service name in docker-compose is "db")
